{
  "expo": {
    "name": "Almoxarifado TI",
    "slug": "almoxarifado-ti",
    "version": "1.0.0",
    "description": "Sistema de gerenciamento de almoxarifado e estoque para TI",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "almoxarifado",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "privacy": "public",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.thiagodev.almoxarifado",
      "requireFullScreen": false,
      "statusBarStyle": "light"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#2563EB",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.thiagodev.almoxarifado"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-build-properties"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "69d85926-d0dd-4c44-9c8c-b47973804c06"
      }
    },
    "owner": "thiagowen"
  }
}
